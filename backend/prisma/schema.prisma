// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name String  @unique
  password  String
  profile Profile?
}

model Profile {
  userId  Int   @id 
  user    User  @relation(fields: [userId], references: [id])
  username  String  @unique
  posts Post[]
  threads Thread[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model Thread {
  id    Int    @id @default(autoincrement())
  title String
  posts Post[]
  userId Int
  author   Profile   @relation(fields: [userId], references: [userId])
  createdAt DateTime
}

model Post {
  id     Int    @id @default(autoincrement())
  body   String
  userId Int
  author   Profile   @relation(fields: [userId], references: [userId])
  threadId Int
  thread Thread @relation(fields: [threadId], references: [id])
  createdAt DateTime
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
