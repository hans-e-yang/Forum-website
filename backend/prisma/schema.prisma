// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name String  @unique
  password  String
  posts Post[]
  threads Thread[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model Thread {
  id    Int    @id @default(autoincrement())
  title String
  posts Post[]
  userid Int
  user   User   @relation(fields: [userid], references: [id])
}

model Post {
  id     Int    @id @default(autoincrement())
  body   String
  userid Int
  user   User   @relation(fields: [userid], references: [id])
  threadid Int
  thread Thread @relation(fields: [threadid], references: [id])
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
